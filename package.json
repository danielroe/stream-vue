{
  "name": "stream-vue",
  "version": "0.3.3",
  "description": "Cloudflare Stream component for VueJS",
  "keywords": [
    "vue",
    "vuejs",
    "cloudflare",
    "video",
    "component",
    "typescript",
    "javascript"
  ],
  "repository": "danielroe/stream-vue",
  "license": "MIT",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "lib/index.d.ts",
    "vetur/**/*",
    "!**/*.map"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf lib/*",
    "compile": "siroc build",
    "lint": "yarn lint:all:eslint && yarn lint:all:prettier",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts,.vue .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "husky install && yarn build",
    "prepublishOnly": "yarn lint && yarn test",
    "release": "release-it",
    "test": "yarn test:unit",
    "test:unit": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.14.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@siroc/eslint-config": "^0.2.0",
    "@siroc/jest-preset": "^0.2.0",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^16.11.48",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vue/test-utils": "^1.2.0",
    "codecov": "^3.8.2",
    "conventional-changelog-conventionalcommits": "^4.6.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "release-it": "14.6.2",
    "semver": "^7.3.5",
    "siroc": "^0.10.0",
    "typescript": "^4.2.4",
    "vue": "2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "vetur": {
    "tags": "vetur/tags.json",
    "attributes": "vetur/attributes.json"
  }
}
